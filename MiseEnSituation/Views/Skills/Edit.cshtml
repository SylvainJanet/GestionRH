                @Html.ListBox("Posts", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Posts, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employees, "Employees", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("Employees", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Employees, "", new { @class = "text-danger" })
            </div>
        </div>

         @if(ViewBag.ErrorMessage != null)
            {
                <p class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</p>
            }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}